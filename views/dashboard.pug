doctype html
html
    head
        include partials/favicon
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(name='theme-color' content='#4DA5F4')
        meta(name='csrf-token', content=_csrf)
        title #{title} - To Do
        link(rel='stylesheet', href='/css/dashboard.css')

    body
        include partials/header

        main
            include partials/flash
            .page-header
                h2 Dashboard
            .col-sm-8.col-sm-offset-2
                section.todo-input
                    h3 Add todo:
                    input#todo-input.input-text(type='text', placeholder='Description...')
                    input#date-input.input-date(type='date', placeholder='DD-MM-JJJJ')
                    button#add-button.btn.btn-primary Add
                    button#sort-button-date.btn.btn-primary Sort by Date
                    button#sort-button-descr.btn.btn-primary Sort by Description
                .content
                    #todos-content.todos
                        h3 Todos:
                    #todos-done.done
                        h3 Done:

        include partials/footer

        script(src='/js/lib/jquery-3.1.1.js')
        script(src='/js/lib/bootstrap.min.js')
        script(src='/js/main.js')


