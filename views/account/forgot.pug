extends ../layout

block content
    .container
        .panel
            .panel-body
                form(method='POST')
                    legend Forgot Password
                    input(type='hidden', name='_csrf', value=_csrf)
                        p Please enter your e-mail below and check your mail for password reset instructions.
                        label.control-label(for='email') Email
                        input.form-control(type='email', name='email', id='email', placeholder='E-mail', autofocus,  required)
                    .form-group
                        button.btn.btn-primary(type='submit')
                            i.fa.fa-key
                            |  Reset Password
